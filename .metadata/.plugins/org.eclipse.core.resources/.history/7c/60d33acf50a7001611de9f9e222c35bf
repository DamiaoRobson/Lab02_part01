package lojaop2;

import java.util.Scanner;

public class MenuPrincipal {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		final int COMPRA = 1;
		final int MUDAR_PRECO = 2;
		final int SAIR = 3;

		System.out.println(
				"Bem vindo ao Lojão LP2!\nMenu Inicial: Digite uma das opções abaixo:\n\n1 - Realizar compra.\n2 - Mudar preço base de produtos.\n3 - Sair\n\nOpção: ");
		
		int opcao = sc.nextInt();sc.nextLine();
		do{
		switch (opcao) {
		case COMPRA:
			ComprasLojaoP2.main(args);
			break;
		case MUDAR_PRECO;
		
			break;

		default:
			break;
		}
		}while(opcao != SAIR);

	}

}
